#pins.transitions-enabled
	- @pins.each do |pin|
		.box.panel.panel-default.mymargin
			.index_frame_container
				= image_tag pin.image.url(:medium), :class => "style_image" + pin.aspect.to_s, :style => "top: #{@picture_frames = PictureFrame.where(aspect_frame: pin.aspect.to_s).limit(1).take!.top}" + '%; ' "left: #{@picture_frames = PictureFrame.where(aspect_frame: pin.aspect.to_s).limit(1).take!.left}" + '%;' "width: #{101 - @picture_frames = PictureFrame.where(aspect_frame: pin.aspect.to_s).limit(1).take!.left * 2}" + '%;'
				= image_tag @picture_frames = PictureFrame.where(aspect_frame: pin.aspect.to_s).limit(1).take!.image.url(:original), :class => "style_image_frame" + pin.aspect.to_s


				%h2= link_to pin.title, pin
				%p.use
					Submitted by
					= pin.use.name
					= pin.image.aspect_ratio(:original)











.col-md-4.col-md-offset-4
	= will_paginate @pins

- if logged_in?
	.row
	%aside.col-md-4
		%section.user_info
			= render 'shared/use_info'
		%section.micropost_form
			= render 'shared/micropost_form'
- else
	.center.jumbotron
	%h1 Welcome to the Sample App
	%h2
	This is the home page for the
	%a{:href => "http://www.railstutorial.org/"} Ruby on Rails Tutorial
	sample application.
	= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary"
	= link_to image_tag("rails.png", alt: "Rails logo"), |
    'http://rubyonrails.org/'                          |


.col-md-4.col-md-offset-4.center
	.form-inline
	.form-group
		= form_tag(pins_path, :method => "get", id: "search-form") do
			= text_field_tag :search, params[:search], placeholder: "Search Pins", class: 'form-control'
			= submit_tag "Search", name: nil, class: 'btn btn-primary inline-button'
			%end


