#pins.transitions-enabled
	- @pins.each do |pin|
		.box.panel.panel-default
			= link_to (image_tag pin.image.url), pin
			%h2= link_to pin.title, pin
			%p.use
				Submitted by



.col-md-4.col-md-offset-4
	= will_paginate @pins


.col-md-4.col-md-offset-4.center
	.form-inline
	.form-group
		= form_tag(pins_path, :method => "get", id: "search-form") do
			= text_field_tag :search, params[:search], placeholder: "Search Pins", class: 'form-control'
			= submit_tag "Search", name: nil, class: 'btn btn-primary inline-button'
			%end


