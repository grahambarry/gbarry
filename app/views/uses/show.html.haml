- provide(:title, @use.name)
.row
  %aside.col-md-4
    %section.use_info
      %h1
        = gravatar_for @use
        = @use.name

.col-md-8
  - if @use.microposts.any?
    %h3
      Microposts (#{@use.microposts.count})
    %ol.microposts
      = render @microposts
    = will_paginate @microposts